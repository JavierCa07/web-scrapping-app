{
  "name": "vite-mern-template",
  "version": "2.0.3",
  "main": "backend/src/index.ts",
  "scripts": {
    "watch": "tsc --watch",
    "backend": "node --watch build/index.js",
    "dev:backend": "npm run copy-python-scripts && concurrently \"npm run watch\" \"npm run backend\"",
    "dev:frontend": "npm start --prefix ./frontend",
    "check-types": "tsc",
    "prettier": "prettier --write .",
    "build:backend": "tsc && npm run copy-python-scripts",
    "build:frontend": "npm run build --prefix ./frontend",
    "build": "tsc && npm run build:frontend",
    "copy-python-scripts": "cpx ./backend/src/python-scrapping/python-script.py ./build/python-scrapping/"
  },
  "repository": "https://github.com/apicgg/vite-mern-template.git",
  "license": "MIT",
  "dependencies": {
    "argon2": "^0.40.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.20.0",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "cpx": "^1.5.0",
    "eslint": "^8.57.0",
    "prettier": "3.2.5",
    "typescript": "^5.5.4"
  }
}
